mixin checkbox(text)
    label.checkbox
        input.checkbox__input(name="location" type="radio")
        .checkbox__elem
        .checkbox__text= text

//- ----------- menu -------------- //

mixin menu(array, classes)
    ul(class="menu__list " + classes)
        each item in array
            li(class="menu__item")
                a(class="menu__link" href="#")=item
                
