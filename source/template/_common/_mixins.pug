mixin slideshow(array, id)
    .slideshow__display
        if array == promo
            .slideshow__promo
                .slideshow__promo-inner
                    .slideshow__promo-season Mid-season
                    .slideshow__promo-sale sale
                    .slideshow__promo-upto 
                        span.slideshow__promo-up up
                        span.slideshow__promo-to to
                    .slideshow__promo-off 50 <span class="persent">%</span> off
                .slideshow__btn
                    a.btn.btn_promo(href="#") Shop now
        
        ul(id="" + (id !== "") ? id : "").slideshow__list
            each item in array
                li.slideshow__item.fade
                    img.slideshow__img(src="" + item.url alt="slide")
                    if array == wallProduct
                        .description.wall__description_mods
                            .description-text #{item.text}
                            .description-price(data-sale="" + item.sale class="" + ((item.sale !== "") ? 'description-price_color' + '' : '')) #{item.price}
        if array == promo    
            div.dots
                span(class="dot")
                span(class="dot")
                span(class="dot")
                span(class="dot")
                    
        if array == wallProduct    
            div.dots.wall__dots_mods
                span(class="dot active")
                span(class="dot")
                span(class="dot")
                span(class="dot")
